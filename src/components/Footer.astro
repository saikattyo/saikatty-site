<style>
	footer {
		background: linear-gradient(135deg, #1e293b 0%, #2d3748 100%);
		backdrop-filter: blur(20px);
		color: rgba(var(--white), 0.95);
		position: relative;
		overflow: hidden;
		border-top: 1px solid rgba(var(--white), 0.1);
		box-shadow: 0 -10px 25px -5px rgba(0, 0, 0, 0.1);
	}

	footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: var(--gradient-primary);
		opacity: 0.1;
		z-index: -1;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 2rem 2rem;
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		gap: 3rem;
	}

	.footer-section h3,
	.footer-section h4 {
		color: white;
		margin-bottom: 1.5rem;
		font-weight: 700;
	}

	.footer-title {
		font-size: 2rem;
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 1rem;
	}

	.footer-description {
		line-height: 1.6;
		color: rgba(var(--white), 0.8);
		font-size: 1.1rem;
	}

	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-nav a {
		color: rgba(var(--white), 0.8);
		text-decoration: none;
		transition: var(--transition-normal);
		font-weight: 500;
	}

	.footer-nav a:hover {
		color: white;
		transform: translateX(4px);
	}

	.footer-nav a::after {
		display: none;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 1rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		background: rgba(var(--white), 0.1);
		border: 1px solid rgba(var(--white), 0.2);
		border-radius: 12px;
		color: rgba(var(--white), 0.8);
		text-decoration: none;
		transition: var(--transition-normal);
	}

	.social-link:hover {
		background: rgba(var(--white), 0.2);
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.social-link::after {
		display: none;
	}

	.footer-bottom {
		border-top: 1px solid rgba(var(--white), 0.1);
		padding: 2rem;
	}

	.footer-divider {
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(var(--white), 0.2),
			transparent
		);
		margin-bottom: 2rem;
	}

	.footer-bottom-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		color: rgba(var(--white), 0.7);
		font-size: 0.9rem;
	}

	.footer-note {
		font-style: italic;
		color: rgba(var(--white), 0.6);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: 2rem;
			padding: 3rem 1rem 2rem;
		}

		.footer-bottom-content {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.social-links {
			justify-content: flex-start;
		}
	}

	@media (max-width: 480px) {
		.footer-content {
			padding: 2rem 1rem;
		}

		.footer-title {
			font-size: 1.5rem;
		}

		.social-links {
			justify-content: flex-start;
		}
	}
</style>
