        document.body.style.setProperty('--mouse-x', x.toString());
        document.body.style.setProperty('--mouse-y', y.toString());
      });
    }
  }

  // åˆæœŸåŒ–
  document.addEventListener('DOMContentLoaded', () => {
    new CursorTrail();
    new ParticleSystem();
    new DynamicBackground();
  });
</script>

