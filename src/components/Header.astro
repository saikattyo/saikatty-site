</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		margin: 0;
		padding: 0 2rem;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		box-shadow: var(--shadow-md);
		transition: var(--transition-normal);
	}

	header::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: var(--gradient-primary);
		opacity: 0.05;
		z-index: -1;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		height: 80px;
	}

	.logo h2 {
		margin: 0;
		font-size: 1.5rem;
		font-weight: 700;
	}

	.site-title {
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-decoration: none;
		font-weight: 700;
		transition: var(--transition-normal);
	}

	.site-title:hover {
		transform: scale(1.05);
	}

	.site-title::after {
		display: none;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		background: rgba(var(--accent), 0.1);
		border-radius: 12px;
		color: var(--accent);
		text-decoration: none;
		transition: var(--transition-normal);
		border: 1px solid rgba(var(--accent), 0.2);
	}

	.social-link:hover {
		background: var(--accent);
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-glow);
	}

	.social-link::after {
		display: none;
	}

	/* Add space for fixed header */
	:global(body) {
		padding-top: 80px;
	}

	@media (max-width: 768px) {
		header {
			padding: 0 1rem;
		}

		nav {
			height: 70px;
		}

		.logo h2 {
			font-size: 1.25rem;
		}

		.internal-links {
			gap: 1rem;
		}

		.social-links {
			display: none;
		}

		:global(body) {
			padding-top: 70px;
		}
	}

	@media (max-width: 480px) {
		.internal-links {
			gap: 0.5rem;
		}
	}
</style>
